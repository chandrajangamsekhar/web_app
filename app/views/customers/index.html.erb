<div class="row">
  <div class="col-lg-12">
    <div class="white-bg row">
      <div class="col-lg-10">
        <nav aria-label="breadcrumb" class="breadcrumb-bottom">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/"><i class="fa fa-home"></i> Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Customers
            </li>
          </ol>
        </nav>
      </div>
      <div class="col-lg-2 p-2">
        <%= link_to "Create Customer", new_customer_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <section class="card">
      <div class="card-body">
        <div class="adv-table">
          <%= content_tag :table, role: :datatable, class: 'table table-bordered table-striped', id: 'dynamic-table', data: { url: customers_path(format: :json) },style: "width: 100%" do %>
            <thead>
              <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Type</th>
                <th>DOB</th>
                <th>Gender</th>
                <th>Phone Number</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
<script>
  $(document).ready(function () {
    var tbl = $('#dynamic-table').DataTable({
      ajax: { 
        'url': $(this).data('url')
      },
      serverSide: false,
      columnDefs: [
        {
          'targets': 6,
          'orderable': false,
          'searchable': false
        }
      ],
      order: [[ 0, 'desc' ]]
    });
  });
</script>