<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Signin</h2>
  <center>
    <div class="invalid-feedback" style="display: block;font-size: 14px;"> <%= flash[:alert] %> </div>
  </center>
  <div class="login-wrap">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <% if devise_mapping.rememberable? %>            
      <label class="checkbox">
        <%= f.input :remember_me, as: :boolean %>
      </label>
    <% end %>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-lg btn-info btn-block" %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
