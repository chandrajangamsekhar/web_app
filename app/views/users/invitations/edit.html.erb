<%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading"><%= t "devise.invitations.edit.header" %></h2>
  <h2 class="form-signin-logo"><img src="/assets/logo.png"></h2>
  <center>
    <div class="invalid-feedback" style="display: block;font-size: 14px;"> <%= flash[:alert] %> </div>
  </center>
  <div class="login-wrap">
  	<%= f.hidden_field :invitation_token %>
    <% resource.class.invite_key_fields.each do |field| -%>
			<div class="form-inputs">
	    	<%= f.input :password %>
	    	<%= f.input :password_confirmation %>
	  	</div>
		<% end -%>
    <div class="form-actions">
      <%= f.button :submit, "Signup",class: "btn btn-lg btn-info btn-block" %>
    </div>
  </div>
<% end %>
