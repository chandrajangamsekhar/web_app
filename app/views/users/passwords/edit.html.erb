<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "form-signin", method: :put}) do |f| %>
  <h2 class="form-signin-heading"><%= t "devise.invitations.edit.header" %></h2>
  <h2 class="form-signin-logo"><img src="/assets/logo.png"></h2>
  <div class="login-wrap">
    <%= f.input :reset_password_token, as: :hidden %>
      <div class="form-inputs">
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
      </div>
    <div class="form-actions">
      <%= f.button :submit, "Change Password",class: "btn btn-lg btn-info btn-block" %>
    </div>
    <%= render "users/shared/links" %>
  </div>
<% end %>